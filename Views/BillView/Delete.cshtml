@model FinanceTracker.Entities.Bill
@{
    ViewData["Title"] = $"Delete Bill - {Model.name}";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this bill?</h3>

<div class="alert alert-warning">
    <strong>Warning!</strong> This action cannot be undone.
</div>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.name</dd>

    <dt class="col-sm-2">Amount</dt>
    <dd class="col-sm-10">@Model.amount.ToString("c")</dd>

    <dt class="col-sm-2">Due Date</dt>
    <dd class="col-sm-10">@Model.dueDate.ToString("d")</dd>

    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">@Model.status</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.description</dd>
</dl>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.id" method="post">
    <input type="hidden" asp-for="id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>