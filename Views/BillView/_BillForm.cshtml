@model FinanceTracker.Entities.Bill

<form asp-action="@(Model.id == 0 ? "Create" : "Edit")" method="post" class="space-y-6">
    @Html.AntiForgeryToken()

    <div class="mb-4">
        <label asp-for="name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
        <input asp-for="name" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
        <span asp-validation-for="name" class="text-red-600 text-sm"></span>
    </div>

    <div class="mb-4">
        <label asp-for="description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
        <input asp-for="description" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
        <span asp-validation-for="description" class="text-red-600 text-sm"></span>
    </div>

    <div class="mb-4">
        <label asp-for="amount" class="block text-sm font-medium text-gray-700 mb-1">Amount</label>
        <input asp-for="amount" type="number" step="0.01" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
        <span asp-validation-for="amount" class="text-red-600 text-sm"></span>
    </div>

    <div class="mb-4">
        <label asp-for="dueDate" class="block text-sm font-medium text-gray-700 mb-1">Due Date</label>
        <input asp-for="dueDate" type="datetime-local" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
        <span asp-validation-for="dueDate" class="text-red-600 text-sm"></span>
    </div>

    <div class="mb-4">
        <label asp-for="status" class="block text-sm font-medium text-gray-700 mb-1">Status</label>
        <select asp-for="status" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            <option value="monthly">Monthly</option>
            <option value="weekly">Weekly</option>
            <option value="partial">Partial</option>
            <option value="cancelled">Cancelled</option>
        </select>
        <span asp-validation-for="status" class="text-red-600 text-sm"></span>
    </div>

    <div class="mb-4 flex justify-center">
        <div class="text-center">
            <h5 class="text-red-600 text-lg font-semibold mb-4">Notifications will be sent to the Bills Discord Chat</h5>
            <div class="space-y-2">
                <label asp-for="notifyOnDay" class="flex items-center space-x-2">
                    <input type="checkbox" asp-for="notifyOnDay" class="rounded border-gray-300 text-blue-600 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50">
                    <span class="text-sm font-medium text-gray-700"><b>Send Notification:</b> On Due Date</span>
                </label>
                <label asp-for="notifyOneDayBefore" class="flex items-center space-x-2">
                    <input type="checkbox" asp-for="notifyOneDayBefore" class="rounded border-gray-300 text-blue-600 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50">
                    <span class="text-sm font-medium text-gray-700"><b>Send Notification:</b> One Day Before Due Date</span>
                </label>
            </div>
        </div>
    </div>

    <div class="flex justify-end space-x-2">
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md font-medium transition-colors">@(Model.id == 0 ? "Create" : "Update") Bill</button>
        <a asp-action="Index" class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-md font-medium transition-colors">Cancel</a>
    </div>

</form>
