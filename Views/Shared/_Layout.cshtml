<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - FinanceTracker</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/FinanceTracker.styles.css" asp-append-version="true"/>
</head>
<body>
<header class="bg-white border-b border-gray-200 shadow-sm mb-8">
    <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center h-16 space-x-8">
            <div class="flex items-center">
                <a href="/" class="text-2xl font-bold text-black hover:text-gray-700 transition-colors">
                    FinanceTracker
                </a>
            </div>
            <div class="flex space-x-6">
                <a href="/" class="text-gray-700 hover:text-blue-600 px-3 py-2 text-sm font-medium transition-colors">Home</a>
                <a asp-action="Index" asp-controller="BillView" class="text-gray-700 hover:text-green-600 px-3 py-2 text-sm font-medium transition-colors">Bills</a>
            </div>
        </div>
    </nav>
</header>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <main class="pb-12">
        @RenderBody()
    </main>
</div>

<footer class="bg-gray-50 border-t border-gray-200 mt-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="text-center text-gray-600">
            &copy; 2025 - FinanceTracker - <a asp-action="Privacy" asp-controller="HomeView" class="text-gray-600 hover:text-gray-900 transition-colors">Privacy</a>
        </div>
    </div>
</footer>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
